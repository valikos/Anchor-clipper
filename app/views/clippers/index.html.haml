.input-append
  = form_for @clipper do |f|
    = f.url_field :url, :class => 'input-xlarge'
    = f.submit 'Clip', :class => 'btn btn-inverse'

#clipper-box.input-prepend.input-append(style="display:none")
  %span(class="add-on")
    = image_tag("anchor.png", :size => "16x16")
    clip
  %span(class="input-large uneditable-input" id="clipper-clip")
    Some value here
  %button(class="btn btn-danger" id="cliper-box-close")
    %i.icon-remove{title: :'Close clip'}

#error-box.alert.alert-error(style="margin:0 auto;width:280px;display:none")
  Can't clip Your URL, it is wrong!